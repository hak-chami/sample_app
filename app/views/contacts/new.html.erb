<% provide(:title, 'Contact') %>
<h1>Contact</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
  <%= form_for(@contact) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :age, class: "control-label" %>
    <%= f.text_field :age, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :email, class: "control-label" %>
    <%= f.text_field :email, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :content, class: "control-label" %>
    <%= f.text_area :content, placeholder: "Please enter a message" %>
  </div>
  <%= f.submit "Send", class: "btn btn-lg btn-primary" %>
<% end %>
</div>
</div>
